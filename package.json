{
  "name": "rankchecker",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "author": "WWYDF <89052946+WWYDF@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "cd frontend && vite",
    "dev:electron": "concurrently -k \"npm:watch:preload\" \"npm:watch:main\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.js\"",

    "watch:main": "esbuild electron/main.ts --bundle --platform=node --external:electron --outfile=dist-electron/main.js --sourcemap --watch",
    "watch:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js --sourcemap --watch",

    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "cd frontend && vite build",
    "build:electron": "npm run build:main && npm run build:preload",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --external:electron --outfile=dist-electron/main.js",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outfile=dist-electron/preload.js",

    "start": "electron dist-electron/main.js",
    "test": "yarn build && yarn start"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "wait-on": "^7.0.1",
    "esbuild": "^0.23.0",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.x"
  },
  "build": {
    "appId": "com.blals.rankchecker",
    "productName": "Rankchecker",
    "files": [
      "dist-electron/**",
      "frontend/dist/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [],
    "win": {
      "target": "nsis"
    }
  }
}
